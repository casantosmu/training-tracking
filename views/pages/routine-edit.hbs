<div class="d-flex justify-content-between">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Routines</a></li>
      <li class="breadcrumb-item"><a href="/routines/{{id}}">{{name}}</a></li>
      <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
  </nav>
</div>

<h1>Edit</h1>

<form action="/routines/{{id}}" method="post">
  <input type="hidden" name="_method" value="PUT" />
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="{{name}}"
      placeholder="Enter routine name"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>

<h2>Workouts</h2>

<ul class="list-group mb-3">
  {{#each workouts as |workout|}}
    <li
      class="list-group-item d-flex justify-content-between align-items-center"
    >
      {{workout.name}}
      <a href="/workouts/{{workout.id}}/edit" class="btn btn-sm btn-secondary">
        Edit
      </a>
    </li>
  {{/each}}
</ul>

<a href="/routines/{{id}}/workouts/create" class="btn btn-success">Add</a>