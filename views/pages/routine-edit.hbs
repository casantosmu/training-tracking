<div class="d-flex justify-content-between align-items-start mb-3">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Routines</a></li>
      <li class="breadcrumb-item"><a href="/routines/{{id}}">{{name}}</a></li>
      <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
  </nav>
  <button
    type="button"
    class="btn btn-danger"
    data-bs-toggle="modal"
    data-bs-target="#deleteModal"
  >
    Delete
  </button>
</div>

<h1>Edit</h1>

<form action="/routines/{{id}}" method="post">
  <input type="hidden" name="_method" value="PUT" />
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="{{name}}"
      placeholder="Enter routine name"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>

<div class="d-flex justify-content-between align-items-start mb-3">
  <h2>Workouts</h2>
  <button
    type="button"
    class="btn btn-success"
    data-bs-toggle="modal"
    data-bs-target="#createModal"
  >
    Add
  </button>
</div>

<ul class="list-group mb-3">
  {{#each workouts as |workout|}}
    <li
      class="list-group-item d-flex justify-content-between align-items-center"
    >
      {{workout.name}}
      (Days:
      {{workout.days}})
      <a href="/workouts/{{workout.id}}/edit" class="btn btn-sm btn-secondary">
        Edit
      </a>
    </li>
  {{/each}}
</ul>

<div
  class="modal fade"
  id="deleteModal"
  tabindex="-1"
  aria-labelledby="deleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title fs-5" id="deleteModalLabel">Confirm Delete</h2>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this routine?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <form action="/routines/{{id}}" method="post">
          <input type="hidden" name="_method" value="DELETE" />
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="createModal"
  tabindex="-1"
  aria-labelledby="createModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <form
      action="/routines/{{id}}/workouts"
      method="post"
      class="modal-content"
    >
      <div class="modal-header">
        <h2 class="modal-title fs-5" id="createModalLabel">Create Routine</h2>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
          />
        </div>
        <div>
          <label for="days" class="form-label">
            Days
          </label>
          <input
            type="number"
            class="form-control"
            id="days"
            name="days"
            min="1"
            max="7"
            required
          />
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
  </div>
</div>