{
  "name": "training-tracking",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "node --watch --env-file=.env . | pino-pretty",
    "db:migrate": "node --env-file=.env db/migrations/init.js",
    "db:seed": "node --env-file=.env db/seeds/init.js",
    "format": "prettier . --write && eslint . --fix",
    "lint": "prettier . --check && eslint .",
    "prepare": "husky"
  },
  "dependencies": {
    "ajv": "^8.14.0",
    "ajv-formats": "^3.0.1",
    "bootstrap": "^5.3.3",
    "express": "^4.19.2",
    "express-handlebars": "^7.1.2",
    "pg": "^8.11.5",
    "pino": "^9.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "eslint": "^9.3.0",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "3.2.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
